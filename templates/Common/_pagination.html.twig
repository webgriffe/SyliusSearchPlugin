{% set paginationLimits = (limits) %}

<div class="ui right floated small header">
    <div class="content">
        <div class="ui inline dropdown sylius-paginate">
            {{ 'sylius.ui.show'|trans }} {{ resultSet.pager.maxPerPage }}
            <i class="dropdown icon"></i>
            <div class="menu">
                {% for limit in paginationLimits %}
                    {% if limit != resultSet.pager.maxPerPage %}
                        {% set path = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all)|merge({'limit': limit})) %}
                        <a class="item" href="{{ path }}">{{ limit }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
